{
  "name": "USP's Amazon Companion",
  "version": "0.0.1",
  "description": "keep up to date on amazon price changes!",
  "permissions": ["declarativeContent", "storage", "https://*/", "tabs", "alarms"],
  "background": {
    "scripts": ["jquery-3.4.1.min.js","background.js"],
    "persistent": false
  },
  "page_action": {
      "default_popup": "popup.html",
      "default_icon": {
       "16": "images/logo16.png",
       "32": "images/logo48.png",
       "48": "images/logo48.png",
       "128": "images/logo128.png"
     }
    },
  "manifest_version": 2
}
